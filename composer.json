{
    "name": "ghostwriter/container",
    "description": "Provides an extensible Dependency Injection Service Container.",
    "license": "BSD-3-Clause",
    "type": "library",
    "keywords": [
        "ghostwriter",
        "container"
    ],
    "authors": [
        {
            "name": "Nathanael Esayeas",
            "email": "nathanael.esayeas@protonmail.com",
            "homepage": "https://github.com/ghostwriter",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/ghostwriter/container",
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/ghostwriter"
        }
    ],
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "ghostwriter/coding-standard": "dev-main",
        "ghostwriter/psalm-plugin": "^0 || ^0.3 || ^1.0",
        "vimeo/psalm": "^5.15"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Ghostwriter\\Container\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ghostwriter\\Container\\Tests\\": "tests/"
        },
        "files": [
            "tests/Fixture/functions.php"
        ]
    },
    "config": {
        "discard-changes": true,
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "prepend-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "bench": "phpbench --colors=always",
        "check": [
            "@composer validate",
            "@ecs",
            "@test",
            "@psalm",
            "@infection",
            "@rector:dry-run"
        ],
        "ecs": [
            "@ecs:fix",
            "@ecs:check"
        ],
        "ecs:check": "vendor/bin/ecs check --clear-cache || true",
        "ecs:fix": "vendor/bin/ecs check --fix --clear-cache || true",
        "dev": [
            "@ecs",
            "@test",
            "@psalm",
            "@infection"
        ],
        "infection": "vendor/bin/infection --ansi --verbose",
        "missing-returntypes": "psalm --alter --issues=MissingReturnType",
        "phpstan": "vendor/bin/phpstan --ansi --verbose --xdebug",
        "phpunit": "vendor/bin/phpunit",
        "phpunit:migrate": "vendor/bin/phpunit --migrate-configuration",
        "psalm": [
            "@psalm:shepherd",
            "@psalm:security"
        ],
        "psalm:baseline": "psalm --set-baseline=psalm-baseline.xml",
        "psalm:dry-run": "psalm --alter --issues=all --dry-run",
        "psalm:missing": "psalm --alter --issues=MissingReturnType",
        "psalm:security": "psalm --taint-analysis",
        "psalm:shepherd": "psalm --shepherd --stats --no-diff --no-cache",
        "rector": "vendor/bin/rector process --verbose",
        "rector:dry-run": "vendor/bin/rector process --dry-run --verbose || true",
        "test": [
            "@xdebug",
            "@phpunit"
        ],
        "xdebug": "@putenv XDEBUG_MODE=coverage"
    }
}
