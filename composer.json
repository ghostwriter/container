{
    "name": "ghostwriter/container",
    "description": "Provides an extensible PSR-11, Dependency Injection Service Container for Automated Object Composition, Interception, and Lifetime Management.",
    "license": "BSD-3-Clause",
    "type": "library",
    "keywords": [
        "ghostwriter",
        "container",
        "psr-11"
    ],
    "authors": [
        {
            "name": "Nathanael Esayeas",
            "email": "nathanael.esayeas@protonmail.com",
            "homepage": "https://github.com/ghostwriter",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/ghostwriter/container",
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/ghostwriter"
        }
    ],
    "require": {
        "php": ">=8.0,<8.3"
    },
    "require-dev": {
        "infection/infection": "^0.26",
        "ghostwriter/json": "^1.0",
        "ghostwriter/option": "^1.0",
        "phpunit/phpunit": "^9.5",
        "psalm/plugin-phpunit": "^0.18",
        "rector/rector": "^0.14",
        "slevomat/coding-standard": "^8.6",
        "symplify/easy-coding-standard": "^11.1",
        "vimeo/psalm": "^4.30"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Ghostwriter\\Container\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ghostwriter\\Container\\Tests\\": "tests/"
        },
        "files": [
            "tests/Fixture/functions.php"
        ]
    },
    "config": {
        "allow-plugins": {
            "infection/extension-installer": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "classmap-authoritative": true,
        "discard-changes": true,
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "prepend-autoloader": true,
        "process-timeout": 5000,
        "sort-packages": true,
        "platform": {
            "php": "8.0.99"
        }
    },
    "scripts": {
        "bench": "phpbench --colors=always",
        "check": [
            "@composer validate",
            "@normalizer",
            "@cs-check",
            "@cs-fix",
            "@test",
            "@psalm",
            "@rector:dry-run",
            "@psalm:security"
        ],
        "cs-check": "vendor/bin/ecs check --clear-cache || true",
        "cs-fix": "vendor/bin/ecs check --fix --clear-cache || true",
        "dev": [
            "@cs-fix",
            "@test",
            "@psalm",
            "@infection"
        ],
        "missing-returntypes": "psalm --alter --issues=MissingReturnType",
        "normalizer": "@composer normalize --no-check-lock",
        "phpunit": "phpunit --colors=always --testdox --stop-on-failure",
        "psalm": "@psalm:shepherd",
        "psalm:baseline": "psalm --set-baseline=psalm-baseline.xml",
        "psalm:dry-run": "psalm --alter --issues=all --dry-run",
        "psalm:missing": "psalm --alter --issues=MissingReturnType",
        "psalm:security": "psalm --taint-analysis",
        "psalm:shepherd": "psalm --shepherd --stats --no-diff --no-cache",
        "rector": "vendor/bin/rector process",
        "rector:dry-run": "vendor/bin/rector process --dry-run || true",
        "test": [
            "@xdebug",
            "@phpunit"
        ],
        "xdebug": "@putenv XDEBUG_MODE=coverage"
    }
}
